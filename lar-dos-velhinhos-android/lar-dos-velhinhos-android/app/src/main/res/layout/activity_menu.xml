<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/buttonVisita"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#8DBF8F"
        android:onClick="visita"
        android:text="Visita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/buttonInclui"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#8DBF8F"
        android:onClick="doacao"
        android:text="Doação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toEndOf="@+id/estatisticaBtn"
        app:layout_constraintTop_toBottomOf="@+id/buttonVisita"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="#8DBF8F"
        android:onClick="sobre"
        android:text="Conheça o Lar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/estatisticaBtn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#8DBF8F"
        android:onClick="estatistica"
        android:text="Estatística do Lar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="353dp"
        android:layout_height="262dp"
        android:layout_marginTop="24dp"
        android:text="Obrigado pela visita! A função desse aplicativo é solidariedade e se você por algum motivo se interessou em conhecer melhor essa instituição, legal! o primeiro passou já foi dado! Aqui você pode ter mais informações e pesquisar muito mais sobre esse projeto do Lar, assim como qualquer outra instituição o Lar também vem a carecer de recursos como remédios, alimentos, agasalho, financeiro e qualquer tipo de ajuda é muito bem vindo. logo abaixo você pode clicar em DOAÇÃO e lembrando que qualquer ajuda é muito bem vinda. Siga nos redes sociais para mais informações ou até mesmo entrar em contato. Instagram: Lardosvelhinhoscps ou Facebook: @lardosvelhinhospage. Telefone para contato (19) 3743-4300 ou Whastapp: (19) 9.9668-4945"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>